spring.application.name=ERP_Backend



#data source properties or connection properties
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.datasource.url=jdbc:mysql://localhost:3306/JfsSdpERP
spring.datasource.username=root
spring.datasource.password=2004

#spring hibernate properties
spring.jpa.hibernate.ddl-auto=create
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect


# Enable multipart file uploads
spring.servlet.multipart.enabled=true
spring.servlet.multipart.max-file-size=2MB  # Adjust the max file size as needed
spring.servlet.multipart.max-request-size=2MB  # Adjust the max request size
